{
    "Solution" : {
        "Id" : "{{cookiecutter.solution_id}}",
        "Name" : "{{cookiecutter.solution_name}}"
    },
    "Tiers" : {
        "web" : {
            "Components" : {
                "static" : {
                    "S3" : {
                        "Instances" : {
                            "default" : { 
                                "Versions" : {
                                    "v1" : {
                                        "DeploymentUnits" : ["static-v1"]
                                    }
                                }
                            }
                        },
                        "Website" : {
                            "Enabled" : true
                        },
                        "PublicAccess" : {
                            "GlobalReadOnly" : {
                                "Enabled" : true,
                                "Permissions" : "ro",
                                "IPAddressGroups" : {{ cookiecutter.source_ip.split(",") | tojson}},
                                "Paths" : {{ cookiecutter.global_media_paths.split(",") | tojson }}
                            }
                        },
                        "CORSBehaviours" : [ "S3Read" ] 
                    }
                }
            }
        },
        "elb" : {
            "Components" : {
                "www-lb" : {
                    "LB" : {
                        "Instances" : {
                            "default" : {
                                "Versions" : {
                                    "v1" : {
                                        "DeploymentUnits" : ["www-v1-lb"]
                                    }
                                }
                            }
                        },
                        "Engine" : "application",
                        "Logs" : true,
                        "IdleTimeout" : 300,
                        "Alerts" : {
                            "5XXLBResponse" : {
                                "Description" : "A high number of 5xx response codes have been sent from load balanced targets",
                                "Name" : "5XXLBResponse",
                                "Metric" : "HTTPCode_Target_5XX_Count",
                                "Threshold" : 20,
                                "Severity" : "Error",
                                "Statistic" : "Sum",
                                "Periods" : 2
                            }
                        },
                        "PortMappings" : {
                            "httpsflower" : {
                                "Priority" : 200,
                                "HostFilter" : true,
                                "Certificate" : {
                                    "IncludeInHost" : {
                                        "Product" : false,
                                        "Environment" : true,
                                        "Tier" : false,
                                        "Component" : false,
                                        "Instance" : false,
                                        "Version" : false,
                                        "Host" : true
                                    },
                                    "Host" : "flower",
                                    "Qualifiers" : {
                                        "prod" : {
                                            "IncludeInHost" : {
                                                "Product" : false,
                                                "Environment" : false,
                                                "Segment" : false,
                                                "Tier" : false,
                                                "Component" : false,
                                                "Instance" : false,
                                                "Version" : false,
                                                "Host" : true
                                            }
                                        }
                                    }
                                } 
                            },
                            "https" : {
                                "Priority" : 500,
                                "HostFilter" : true,
                                "Certificate" : {
                                    "IncludeInHost" : {
                                        "Product" : false,
                                        "Environment" : true,
                                        "Tier" : false,
                                        "Component" : true,
                                        "Instance" : false,
                                        "Version" : false,
                                        "Host" : false
                                    },
                                    "Qualifiers" : {
                                        "prod" : {
                                            "IncludeInHost" : {
                                                "Product" : false,
                                                "Environment" : false,
                                                "Segment" : false,
                                                "Tier" : false,
                                                "Component" : true,
                                                "Instance" : false,
                                                "Version" : false,
                                                "Host" : false
                                            }
                                        }
                                    }
                                }
                            },
                            "httpredirect" : {
                                "Redirect" : {}
                            }
                        },
                        "IPAddressGroups" : {{ cookiecutter.source_ip.split(",") | tojson}}
                    }
                }
            }
        },
        "app" : {
            "Components" : {
                "app-ecs" : {
                    "DeploymentUnits" : ["app-ecs"],
                    "ECS" : {
                        "Alerts" : {
                            "HighHostMemoryUsage" : {
                                "Description" : "High Memory usage on ECS Host cluster",
                                "Name" : "HighHostMemoryUsage",
                                "Metric" : "MemoryUtilization",
                                "Threshold" : 95,
                                "Severity" : "Error",
                                "Statistic" : "Average",
                                "Periods" : 2,
                                "Resource" : {
                                    "Type" : "ecs"
                                }
                            },
                            "HighHostCPUUsage" : {
                                "Description" : "High CPU usage on ECS Host cluster",
                                "Name" : "HighHostCPUUsage",
                                "Metric" : "CPUUtilization",
                                "Threshold" : 95,
                                "Severity" : "Error",
                                "Statistic" : "Average",
                                "Periods" : 2,
                                "Resource" : {
                                    "Type" : "ecs"
                                }
                            }
                        },
                        "Containers" : {
                            "Configuration" : {
                                "Links" : {
                                    "database" : {
                                        "Tier" : "db",
                                        "Component" : "database"
                                    },
                                    "cache" : {
                                        "Tier" : "db",
                                        "Component" : "cache"
                                    },
                                    "DJANGO_AWS_STORAGE_BUCKET" : {
                                        "Tier" : "web",
                                        "Component" : "static",
                                        "Role" : "all"
                                    }
                                }
                            }
                        },
                        "Services" : {
                            "www-web" : {
                                "Instances" : {
                                    "default" : {
                                        "Versions" : {
                                            "v1" : {
                                                "DeploymentUnits" : ["www-v1-web"]
                                            }
                                        }
                                    }
                                },
                                "Containers" : {
                                    "www-web" : {
                                        "Cpu" : 512,
                                        "Memory" : 512,
                                        "MaximumMemory" : 2048,
                                        "Ports" : {
                                            "http" : {
                                                "LB" : {
                                                    "Tier": "elb",
                                                    "Component"  : "www-lb",
                                                    "PortMapping" : "https",
                                                    "LinkName" : "SITE"
                                                },
                                                "DynamicHostPort" : true
                                            }
                                        }
                                    }
                                },
                                "Placement" : {
                                    "Strategy" : "{{cookiecutter.container_placement_strategy}}"
                                }
                            }{% if cookiecutter.use_celery == "yes" %},
                            "www-celeryworker" : {
                                "Instances" : {
                                    "default" : {
                                        "Versions" : {
                                            "v1" : {
                                                "DeploymentUnits" : ["www-v1-celeryworker"]
                                            }
                                        }
                                    }
                                },
                                "Containers" : {
                                    "www-celeryworker" : {
                                        "Cpu" : 512,
                                        "Memory" : 512,
                                        "MaximumMemory" : 2048
                                    }
                                },
                                "Placement" : {
                                    "Strategy" : "{{cookiecutter.container_placement_strategy}}"
                                }
                            },
                            "www-celerybeat" : {
                                "Instances" : {
                                    "default" : {
                                        "Versions" : {
                                            "v1" : {
                                                "DeploymentUnits" : ["www-v1-celerybeat"]
                                            }
                                        }
                                    }
                                },
                                "DesiredCount" : 1,
                                "Containers" : {
                                    "www-celerybeat" : {
                                        "Cpu" : 128,
                                        "Memory" : 128
                                    }
                                }
                            },
                            "www-flower" : {
                                "Instances" : {
                                    "default" : {
                                        "Versions" : {
                                            "v1" : {
                                                "DeploymentUnits" : ["www-v1-flower"]
                                            }
                                        }
                                    }
                                },
                                "DesiredCount" : 1,
                                "Containers" : {
                                    "www-flower" : {
                                        "Cpu" : 128,
                                        "Memory" : 128,
                                        "Ports" : {
                                            "flower" : {
                                                "LB" : {
                                                    "Tier": "elb",
                                                    "Component"  : "www-lb",
                                                    "PortMapping" : "httpsflower",
                                                    "LinkName" : "CELERY_FLOWER_LB"
                                                },
                                                "DynamicHostPort" : true
                                            }
                                        }
                                    }
                                }
                            }{% endif %}
                        },
                        "Tasks" : {
                            "www-task" : {
                                "Instances" : {
                                    "default" : {
                                        "Versions" : {
                                            "v1" : {
                                                "DeploymentUnits" : ["www-v1-task"]
                                            }
                                        }
                                    }
                                },
                                "Containers" : {
                                    "www-task" : {
                                        "Cpu" : 512,
                                        "Memory" : 512,
                                        "MaximumMemory" : 2048,
                                        "Links" : {
                                            "database" : {
                                                "Tier" : "db",
                                                "Component" : "database"
                                            },
                                            "cache" : {
                                                "Tier" : "db",
                                                "Component" : "cache"
                                            },
                                            "DJANGO_AWS_STORAGE_BUCKET" : {
                                                "Tier" : "web",
                                                "Component" : "static",
                                                "Role" : "all"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },{% if cookiecutter.use_celery == "yes" %}
        "msg" : {
            "Components" : {
                "queue" : {
                    "MultiAZ" : false,
                    "cache" : {
                        "Instances" : {
                            "default" : {
                                "Versions" : {
                                    "v1" : {
                                        "DeploymentUnits" : ["queue-v1-redis"]
                                    }
                                }
                            }
                        },
                        "Engine" : "redis",
                        "EngineVersion" : "{{cookiecutter.queue_redis_version}}",
                        "Alerts" : {
                            "HighCPUUsage" : {
                                "Description" : "Redis cache under high CPU load",
                                "Name" : "HighCPUUsage",
                                "Metric" : "EngineCPUUtilization",
                                "Threshold" : 90,
                                "Severity" : "Error",
                                "Statistic" : "Average",
                                "Periods" : 2
                            }
                        }
                    }
                }
            }
        },{% endif %}
        "db" :{
            "Components" : {
                "database" : {
                    "RDS" : {
                        "Instances" : {
                            "default" : {
                                "Versions" : {
                                    "v1" : {
                                        "DeploymentUnits" : ["database-v1-rds"]
                                    }
                                }
                            }
                        },
                        "Engine" : "postgres",
                        "Version" : "{{cookiecutter.databse_postgres_version}}",
                        "GenerateCredentials" : {
                            "Enabled" : true,
                            "EncryptionScheme" : "base64"
                        },
                        "Size" : {{cookiecutter.database_size_gb}},
                        "Alerts" : {
                            "HighCPUUsage" : {
                                "Description" : "Database under high CPU load",
                                "Name" : "HighCPUUsage",
                                "Metric" : "CPUUtilization",
                                "Threshold" : 90,
                                "Severity" : "Error",
                                "Statistic" : "Average",
                                "Periods" : 2
                            },
                            "LowDiskSpace" : {
                                "Description" : "Database disk space is getting low only 500mb free",
                                "Name" : "LowDiskSpace",
                                "Metric" : "FreeStorageSpace",
                                "Threshold" : 512000000,
                                "Severity" : "Error",
                                "Statistic" : "Maximum",
                                "Periods" : 1,
                                "Operator" : "LessThanOrEqualToThreshold"
                            }
                        }
                    }
                }
            }
        }
    }
}
